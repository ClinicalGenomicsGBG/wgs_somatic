Bootstrap: docker
From: debian:12.8-slim
Stage: build


%files
    /clinical/exec/wgs_somatic/dependencies/ncbi/hg38/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna databases/
    /clinical/exec/wgs_somatic/dependencies/ncbi/hg38/GCA_000001405.15_GRCh38_no_alt_analysis_set.fna.fai databases/
    /clinical/exec/wgs_somatic/dependencies/ncbi/hg38/GRCh38.dbSNP156.vcf.gz databases/
    /clinical/exec/wgs_somatic/dependencies/ncbi/hg38/GRCh38.dbSNP156.vcf.gz.tbi databases/
    /clinical/exec/wgs_somatic/dependencies/gatk/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz databases/
    /clinical/exec/wgs_somatic/dependencies/gatk/Mills_and_1000G_gold_standard.indels.hg38.vcf.gz.tbi databases/
    /apps/bio/dependencies/wgs_somatic/hg38/sentieon/Sentieon_GiAB_201711.model databases/
    
%post
    # Install python3 and other requirements for git and pip3
    apt-get update
    apt-get install -y python3 python3-pip wget vim build-essential

    # Get sentieon
    wget https://s3.amazonaws.com/sentieon-release/software/sentieon-genomics-202308.03.tar.gz
    wget -O databases/SentieonDNAscopeModel1.0.model https://s3.amazonaws.com/sentieon-release/other/SentieonDNAscopeModel1.0.model

    # Unzip using tar
    tar -zxvf sentieon-genomics-202308.03.tar.gz

%environment
    # below will be set with bind during execute
    SENTIEON_LICENSE=medair1.medair.lcl:8990
    LD_LIBRARY_PATH=/sentieon-genomics-202308.03/lib
    export SENTIEON_LICENSE LD_LIBRARY_PATH


%runscript
    exec /bin/bash "$@"
